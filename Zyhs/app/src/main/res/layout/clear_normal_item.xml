<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360px"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    tools:visibility="visible"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="244px"
        android:layout_height="244px">

        <com.tlh.android.widget.ClearImageViewWithTxt
            android:id="@+id/iv_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@mipmap/ic_class_glass" />

        <com.tlh.android.widget.NoPaddingTextView
            android:id="@+id/tv_clear_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="50px"
            android:textColor="@color/white"
            tools:text="120个"/>

    </FrameLayout>

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/tv_clear_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:textColor="@color/black"
        android:layout_marginTop="26px"
        android:text="已使用45%"/>

</LinearLayout>