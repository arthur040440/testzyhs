<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/include_paper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_paper"
        android:layout_width="44px"
        android:layout_height="47px"
        android:layout_marginLeft="23px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_order_paper" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/tv_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_paper"
        android:text="@string/paper"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_paper"
        android:textSize="24px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_toRightOf="@id/tv_paper"
        android:layout_centerVertical="true"
        android:text="@string/x"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_paper"
        android:textSize="12px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/paper_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14px"
        android:layout_toRightOf="@id/x"
        android:layout_centerVertical="true"
        tools:text="3.5"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/x"
        android:textSize="40px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/paper_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14px"
        android:layout_toRightOf="@id/paper_num"
        android:layout_centerVertical="true"
        android:text="@string/kg"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/paper_num"
        android:textSize="11px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/zy_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zy_icon"
        android:textColor="@color/black_575757"
        android:layout_marginRight="62px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="22px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/zyb_num_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/zy_unit"
        tools:text="3000"
        android:textColor="@color/black_222222"
        android:layout_marginRight="7px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/zy_unit"
        android:textSize="32px" />

</android.support.constraint.ConstraintLayout>