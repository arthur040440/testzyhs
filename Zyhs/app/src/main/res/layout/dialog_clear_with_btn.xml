<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="666px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/ntv_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43px"
        android:gravity="center"
        android:text="清理中"
        android:textColor="@color/black"
        android:textSize="32px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="36px"
        android:background="@color/theme_color"
        app:layout_constraintTop_toBottomOf="@id/ntv_clear" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="109px"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <com.tlh.android.widget.NoPaddingTextView
            android:id="@+id/tv_clear_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35px"
            android:layout_marginRight="10px"
            android:layout_marginTop="43px"
            android:textColor="@color/black"
            android:textSize="32px"
            tools:text="塑料瓶" />

        <com.tlh.android.widget.NoPaddingTextView
            android:id="@+id/tv_clear_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35px"
            android:layout_marginTop="43px"
            android:textColor="@color/black"
            android:textSize="38px"
            tools:text="120" />

        <com.tlh.android.widget.NoPaddingTextView
            android:id="@+id/tv_clear_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35px"
            android:layout_marginTop="43px"
            tools:text="个"
            android:textColor="@color/black"
            android:textSize="32px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="249px"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20px"
        app:layout_constraintTop_toTopOf="parent">

        <com.tlh.android.widget.NoPaddingTextView
            android:id="@+id/tv_re_open"
            android:layout_width="250px"
            android:layout_height="80px"
            android:background="@drawable/sec_btn_theme_bg"
            android:gravity="center"
            android:text="重新开门"
            android:textColor="@color/black"
            android:textSize="38px" />

        <com.tlh.android.widget.NoPaddingTextView
            android:id="@+id/tv_data_deal_doing"
            android:layout_width="250px"
            android:layout_height="80px"
            android:background="@drawable/sec_btn_theme_bg"
            android:gravity="center"
            android:text="正在清理数据"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="38px" />

        <com.tlh.android.widget.NoPaddingTextView
            android:id="@+id/tv_re_close"
            android:layout_width="250px"
            android:layout_height="80px"
            android:background="@drawable/sec_btn_theme_bg"
            android:gravity="center"
            android:text="手动关门"
            android:layout_marginLeft="10px"
            android:textColor="@color/black"
            android:textSize="38px" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>


