<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="858px"
    android:layout_height="1170px"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <com.tlh.android.widget.ImageTextButton
        android:id="@+id/itb_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo_top"
        android:layout_marginLeft="141px"
        android:layout_marginTop="143px"
        android:layout_marginRight="141px"
        android:gravity="center_horizontal"
        android:text="@string/i_do_not_know_you"
        android:textColor="@color/black"
        android:textSize="40px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:leftDrawable="@mipmap/ic_left_fish"
        custom:rightDrawable="@mipmap/ic_right_fish" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="让我们成为朋友吧！\n扫描下方二维码完成人脸信息设置"
        android:textColor="@color/black"
        android:textSize="38px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itb_tip" />

    <ImageView
        android:id="@+id/iv_qr"
        android:layout_width="307px"
        android:layout_height="308px"
        android:layout_marginTop="200px"
        android:background="@mipmap/ic_qr_border"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itb_tip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74px"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="或"
        android:textColor="@color/black"
        android:textSize="38px"
        app:layout_constraintBottom_toTopOf="@id/tv_input_phone_again"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/tv_input_phone_again"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="62px"
        android:layout_marginRight="62px"
        android:layout_marginBottom="20px"
        android:background="@drawable/sec_btn_theme_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="重新输入手机号码"
        android:textColor="@color/black"
        android:textSize="38px"
        app:layout_constraintBottom_toTopOf="@+id/tv_back_to_pre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_back_to_pre"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="62px"
        android:layout_marginRight="62px"
        android:layout_marginBottom="82px"
        android:background="@drawable/sec_btn_theme_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="返回二维码登录"
        android:textColor="@color/black"
        android:textSize="38px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>


