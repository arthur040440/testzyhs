<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_other"
        android:layout_width="40px"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_order_junk" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_other"
        android:text="其它"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_other"
        android:textSize="24px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_toRightOf="@id/tv_other"
        android:layout_centerVertical="true"
        android:text="@string/x"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_other"
        android:textSize="12px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/other_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14px"
        android:layout_toRightOf="@id/x"
        android:layout_centerVertical="true"
        android:text="30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/x"
        android:textColor="@color/black"
        android:textSize="40px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14px"
        android:layout_toRightOf="@id/other_num"
        android:layout_centerVertical="true"
        android:text="件"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/other_num"
        android:textColor="@color/black"
        android:textSize="11px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:id="@+id/zy_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/zy_icon"
        android:textColor="@color/black_575757"
        android:layout_marginRight="62px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="22px" />

    <com.tlh.android.widget.NoPaddingTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/zy_unit"
        android:text="3000"
        android:textColor="@color/black_222222"
        android:layout_marginRight="7px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/zy_unit"
        android:textSize="32px" />

</android.support.constraint.ConstraintLayout>