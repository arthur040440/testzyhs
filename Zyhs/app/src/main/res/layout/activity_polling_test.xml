<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_screen_other_bg">

    <include layout="@layout/page_head_logo" />

    <View
        android:layout_width="858px"
        android:layout_height="1170px"
        android:layout_marginTop="280px"
        android:background="@drawable/dialog_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dev_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="176px"
        android:layout_marginTop="383px"
        android:textColor="@color/black"
        android:textSize="24px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="编号：20181281283456" />

    <TextView
        android:id="@+id/dev_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170px"
        android:layout_marginTop="430px"
        android:textColor="@color/black"
        android:textSize="32px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="浙江省杭州市余杭区贝易物联01号机" />

    <View
        android:layout_width="720px"
        android:layout_height="1px"
        android:layout_marginTop="503px"
        android:background="#E5E5E5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tlh.android.widget.ImageTextButton
        android:id="@+id/itb_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo_top"
        android:layout_marginLeft="246px"
        android:layout_marginRight="246px"
        android:layout_marginTop="543px"
        android:gravity="center"
        android:textColor="@color/two_fish_color"
        android:textSize="38px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDrawable="@mipmap/ic_left_fish"
        app:rightDrawable="@mipmap/ic_right_fish"
        tools:text="柜门异常" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sw_ctrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/selector_thumb"
        app:layout_constraintTop_toBottomOf="@id/itb_dev"
        app:switchMinWidth="100px"
        android:layout_marginTop="71px"
        android:layout_marginLeft="220px"
        android:layout_marginRight="175px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:track="@drawable/selector_track" />

    <TextView
        android:id="@+id/tv_ctrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17px"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/sw_ctrl"
        android:textColor="@color/black"
        android:textSize="28px"
        android:singleLine="true"
        android:layout_marginTop="78px"
        app:layout_constraintTop_toBottomOf="@id/itb_dev"
        android:text="关闭轮询" />

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/theme_color"
        android:textSize="48px"
        android:singleLine="true"
        android:layout_marginTop="78px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="日志提醒" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="734px"
        android:layout_height="114px"
        android:layout_marginBottom="552px"
        android:background="@drawable/sec_btn_theme_bg"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/tv_theme_color"
        android:textSize="38px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />




</android.support.constraint.ConstraintLayout>